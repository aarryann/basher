{
  "name": "basher",
  "version": "1.0.0",
  "description": "A web dashboard for running and displaying the output of bash commands",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "wsdev": "nodemon wsserver.js",
    "docker:build": "docker compose up -d",
    "docker:run": "docker run --rm -d -p 3111:3111 --restart unless-stopped homation:latest ",
    "docker:clean": "docker compose stop homation && docker compose rm homation",
    "docker:tag": "docker tag homation:latest aarryann/homation:latest",
    "docker:push": "docker push aarryann/homation:latest"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "child_process": "^1.0.2",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "alpinejs": "^3.13.3",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5"
  },
  "keywords": [
    "dashboard",
    "bash",
    "express",
    "axios",
    "alpinejs",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT"
}